services:
  aria2-pro:
    container_name: aria2-pro
    image: p3terx/aria2-pro
    networks:
      - jellyfin
    environment:
      - UMASK_SET=022
      - RPC_SECRET=P3TERX
      - RPC_PORT=6800
      - LISTEN_PORT=6888
      - DISK_CACHE=64M
      - IPV6_MODE=false
      - UPDATE_TRACKERS=true
      - CUSTOM_TRACKER_URL=
      - TZ=Asia/Ho_Chi_Minh
    volumes:
      - /data/aria2-pro/config:/config
      - /data/downloads:/downloads
    ports:
      - 6800:6800
      - 6888:6888
      - 6888:6888/udp

    restart: unless-stopped
    logging:
      driver: json-file
      options:
        max-size: 1m

  ariang:
    container_name: ariang
    image: p3terx/ariang
    networks:
      - jellyfin
    command: --port 6880 --ipv6
    ports:
      - 6880:6880
    restart: unless-stopped
    logging:
      driver: json-file
      options:
        max-size: 1m

  realdebridmanager:
    image: hyperbunny77/realdebridmanager:2022.05.29
    container_name: realdebridmanager
    networks:
      - jellyfin
    environment:
      - rdmport=5000
    ports:
      - 5000:5000/tcp
    volumes:
      - /data/watch:/watch
      - /data/realdebridmanager/config:/config
    restart: unless-stopped
    depends_on:
      - aria2-pro

  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    networks:
      - jellyfin
    environment:
      - TZ=Asia/Ho_Chi_Minh
    volumes:
      - /data/radarr/config:/config
      - /data/watch:/watch
      - /data/downloads:/download-imports
      - /data/downloads-completed/movies:/downloads
    ports:
      - 7878:7878
    restart: unless-stopped

  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    networks:
      - jellyfin
    environment:
      - Asia/Ho_Chi_Minh
    volumes:
      - /data/sonarr/config:/config
      - /data/watch:/watch
      - /data/downloads:/download-imports
      - /data/downloads-completed/tvshows:/downloads
    ports:
      - 8989:8989
    restart: unless-stopped

  jackett:
    image: spritsail/jackett
    container_name: jackett
    networks:
      - jellyfin
    ports:
      - 9117:9117
    volumes:
      - /data/jackett/config:/config
    restart: unless-stopped

  jellyfin:
    image: lscr.io/linuxserver/jellyfin:latest
    container_name: jellyfin
    environment:
      - TZ=Asia/Ho_Chi_Minh
    volumes:
      - /data/jellyfin/config:/config
      - /data/downloads-completed/tvshows:/data/tvshows
      - /data/downloads-completed/movies:/data/movies
    ports:
      - 8096:8096
    restart: unless-stopped


networks:
  jellyfin:
    driver: "bridge"
    attachable: true
    ipam:
      driver: default
      config:
        - subnet: 192.168.1.0/24
